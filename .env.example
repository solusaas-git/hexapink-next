# Database
MONGODB_URI=mongodb://localhost:27017/hexapink
DATABASE_URL=mongodb://localhost:27017/hexapink

# JWT
JWT_SECRET=your-jwt-secret-key-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
API_URL=http://localhost:3000/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# File Upload
MAX_FILE_SIZE=50mb
UPLOAD_DIR=./public/uploads

# Cloudflare Turnstile (Optional - for CAPTCHA)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-site-key
TURNSTILE_SECRET_KEY=your-secret-key

# Session
SESSION_SECRET=your-session-secret-key-here

# Environment
NODE_ENV=development
NEXT_PUBLIC_ENV=development

# Socket.IO (if using real-time features)
SOCKET_URL=http://localhost:3000

# Suppress hydration warnings in development (optional)
NEXT_PUBLIC_SUPPRESS_HYDRATION_WARNING=true

